<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ChooseLoginRegistrationActivity"
        android:orientation="vertical"
        android:background="@drawable/old_paper">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



    <TextView
            android:id="@+id/welcome"

            android:layout_width="287dp"
            android:layout_height="180dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"

            android:layout_marginStart="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            android:fontFamily="cursive"
            android:gravity="center"
            android:rotation="0"
            android:rotationX="0"
            android:text="Добро пожаловать, бравый дуэлист!"
            android:textAlignment="center"
            android:textColor="#b8001d"
            android:textSize="30sp"
            android:textStyle="italic|bold" />


            <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/welcome"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="crossed blades"
                    android:src="@drawable/crossed_blades"/>




    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Я уже с вами"
            android:id="@+id/login"
            android:background="@drawable/buttons"/>


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login"
                    android:text="Хочу вступить в ваши ряды"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/register"
                    android:background="@drawable/buttons"/>



            <ImageView
                    android:id="@+id/hat"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/register"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:contentDescription="hat"
                    android:src="@drawable/hat"/>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>