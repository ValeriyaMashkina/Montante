<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/fencer"
                android:id="@+id/image"
                android:onClick="toChat"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/nameAndSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Имя и фамилия"

                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/region"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Регион"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/club"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Клуб"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

            <TextView
                    android:id="@+id/weapons"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Виды оружия"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/challengeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Дата вызова"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    android:id="@+id/rivalId"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/status"
            android:textSize="20sp"
            android:text="Статус"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
    />


</LinearLayout>